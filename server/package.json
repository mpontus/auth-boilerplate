{
  "name": "server",
  "version": "1.0.0",
  "description": "Auth Boilerplate Server",
  "private": true,
  "scripts": {
    "build": "gulp",
    "start": "nodemon",
    "lint": "tslint -p tsconfig.json",
    "test": "jest",
    "test:e2e": "jest --runInBand --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^5.1.0",
    "@nestjs/core": "^5.1.0",
    "@nestjs/cqrs": "^5.1.1",
    "@nestjs/testing": "^5.1.0",
    "@nestjs/typeorm": "^5.2.2",
    "bcrypt": "^3.0.1",
    "class-transformer": "^0.1.9",
    "class-validator": "^0.9.1",
    "cors": "^2.8.4",
    "dayjs": "^1.7.7",
    "ejs": "^2.6.1",
    "email-templates": "^5.0.1",
    "hat": "^0.0.3",
    "jsonwebtoken": "^8.3.0",
    "nestjs-config": "^1.2.5",
    "nodemailer": "^4.6.8",
    "pg": "^7.4.3",
    "redis": "^2.8.0",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.2.2",
    "typeorm": "^0.2.7",
    "typescript": "^3.0.1",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^2.0.0",
    "@types/cors": "^2.8.4",
    "@types/email-templates": "^3.5.0",
    "@types/express": "^4.16.0",
    "@types/hat": "^0.0.0",
    "@types/jest": "^23.3.1",
    "@types/jsonwebtoken": "^7.2.8",
    "@types/node": "^10.7.1",
    "@types/nodemailer": "^4.6.5",
    "@types/passport-google-oauth2": "^0.1.2",
    "@types/passport-http-bearer": "^1.0.33",
    "@types/supertest": "^2.0.5",
    "@types/uuid": "^3.4.4",
    "gulp": "^3.9.1",
    "gulp-typescript": "^5.0.0-alpha.3",
    "jest": "^23.5.0",
    "nodemon": "^1.18.3",
    "prettier": "^1.14.2",
    "supertest": "^3.1.0",
    "ts-jest": "^23.1.3",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.6.0",
    "tslint": "5.11.0",
    "tslint-clean-code": "^0.2.7",
    "tslint-config-prettier": "^1.15.0",
    "typemoq": "^2.1.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "modulePaths": [
      "<rootDir>"
    ],
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "testEnvironment": "node"
  }
}
